<local:AllViewBase x:Class="LogistiQ.Views.Deliveries.AllDeliveriesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogistiQ.Views.BaseWorkspace"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding List}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding DeliveryID}"/>
                <DataGridTextColumn Header="SupplierName" Binding="{Binding SupplierName}"/>
                <DataGridTextColumn Header="SupplierAddress" Binding="{Binding SupplierAddress}"/>
                <DataGridTextColumn Header="DeliveryDate" Binding="{Binding DeliveryDate}"/>
                <DataGridTextColumn Header="Cost" Binding="{Binding Cost}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                <DataGridTextColumn Header="WarehouseName" Binding="{Binding WarehouseName}"/>
                <DataGridTextColumn Header="WarehouseLocation" Binding="{Binding WarehouseLocation}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:AllViewBase>
